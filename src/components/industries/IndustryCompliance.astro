---
import type { IndustryComplianceHighlight } from './types';

interface Props {
  complianceHighlights: IndustryComplianceHighlight[];
}

const { complianceHighlights } = Astro.props as Props;
const sectionId = 'industry-compliance';
---

<section
  id={sectionId}
  aria-labelledby={`${sectionId}-heading`}
  class="space-y-6 rounded-3xl border border-slate-800 bg-slate-950/60 p-8 shadow-lg ring-1 ring-slate-900/60"
  data-analytics-region="industry-compliance"
>
  <!--
    Compliance messaging is mission critical for enterprise deals. We highlight the
    framework first, then narrate the alignment, and close with optional evidence.
    The server-rendered markup keeps everything crawlable for security scanners and
    search crawlers while avoiding hydration.
  -->
  <header class="space-y-2">
    <h2 id={`${sectionId}-heading`} class="text-2xl font-semibold text-white md:text-3xl">
      Compliance proof points
    </h2>
    <p class="text-base text-slate-300">
      Procurement, security, and risk teams can trace each control back to the supporting
      attestation package.
    </p>
  </header>

  <ul class="grid gap-6 md:grid-cols-3" data-testid="industry-compliance-list">
    {
      complianceHighlights.map((highlight) => (
        <li class="rounded-2xl border border-slate-800/80 bg-slate-900/50 p-6 shadow-inner">
          <h3 class="text-lg font-semibold text-white">{highlight.framework}</h3>
          <p class="mt-3 text-sm text-slate-300">{highlight.highlight}</p>
          {highlight.evidence ? (
            <p class="mt-3 text-xs font-semibold uppercase tracking-[0.3rem] text-indigo-300">
              Evidence: {highlight.evidence}
            </p>
          ) : null}
        </li>
      ))
    }
  </ul>
</section>
