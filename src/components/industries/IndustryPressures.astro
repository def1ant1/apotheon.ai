---
import type { IndustryPressure } from './types';

interface Props {
  pressures: IndustryPressure[];
}

const { pressures } = Astro.props as Props;
const sectionId = 'industry-pressures';
---

<section
  id={sectionId}
  aria-labelledby={`${sectionId}-heading`}
  class="space-y-6 rounded-3xl border border-slate-800 bg-slate-950/60 p-8 shadow-lg ring-1 ring-slate-900/60"
  data-analytics-region="industry-pressures"
>
  <!--
    Pressure cards ship server-rendered definition lists to keep reading order and
    SEO semantics intact. No client-side hydration is required because the content
    resolves entirely from structured frontmatter.
  -->
  <header class="space-y-2">
    <h2 id={`${sectionId}-heading`} class="text-2xl font-semibold text-white md:text-3xl">
      Sector pressures we neutralize
    </h2>
    <p class="text-base text-slate-300">
      Executive sponsors consistently cite these systemic blockers when evaluating transformation
      programs.
    </p>
  </header>

  <dl class="grid gap-6 md:grid-cols-3" data-testid="industry-pressures-list">
    {
      pressures.map((pressure) => (
        <div class="rounded-2xl border border-slate-800/80 bg-slate-900/50 p-6 shadow-inner">
          <dt class="text-lg font-semibold text-white">{pressure.title}</dt>
          <dd class="mt-3 space-y-2 text-sm text-slate-300">
            <p>{pressure.description}</p>
            {pressure.metric ? (
              <p class="font-semibold text-indigo-200" data-metric>
                {pressure.metric}
              </p>
            ) : null}
          </dd>
        </div>
      ))
    }
  </dl>
</section>
