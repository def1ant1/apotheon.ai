---
import ErrorPageShell from '../components/system/ErrorPageShell.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page not found" description="Nothing to see here just yet.">
  <ErrorPageShell
    code="404"
    title="This page hasn't shipped yet"
    description="The content you were looking for hasn't landed in the repository yet. As MDX collections grow, Astro will statically generate new routes and Pagefind will automatically re-index them."
  >
    <Fragment slot="actions">
      <a
        class="inline-flex items-center gap-2 rounded border border-slate-700 px-4 py-2 text-sm"
        href="/"
      >
        ‚Üê Return home
      </a>
    </Fragment>
  </ErrorPageShell>
</BaseLayout>
