{
  "$schema": "https://json.schemastore.org/lighthouserc.json",
  "ci": {
    "collect": {
      "staticDistDir": "./dist",
      "url": [
        "/",
        "/solutions/",
        "/solutions/mnemosyne/",
        "/solutions/hermes/",
        "/solutions/clio/",
        "/solutions/themis/",
        "/solutions/nova/",
        "/solutions/morpheus/"
      ],
      "numberOfRuns": 1,
      "settings": {
        "preset": "desktop",
        "formFactor": "desktop",
        "throttlingMethod": "simulate",
        "chromeFlags": "--headless=new --no-sandbox --disable-gpu --disable-dev-shm-usage --user-data-dir=/tmp/lhci-chrome"
      },
      "budgets": [
        {
          "path": "/*",
          "resourceSizes": [
            { "resourceType": "script", "budget": 200 },
            { "resourceType": "image", "budget": 600 },
            { "resourceType": "third-party", "budget": 150 }
          ],
          "resourceCounts": [
            { "resourceType": "third-party", "budget": 10 },
            { "resourceType": "total", "budget": 50 }
          ],
          "timings": [
            { "metric": "largest-contentful-paint", "budget": 2500 },
            { "metric": "cumulative-layout-shift", "budget": 0.1 },
            { "metric": "total-blocking-time", "budget": 150 },
            { "metric": "interactive", "budget": 3500 }
          ]
        },
        {
          "path": "/solutions/*",
          "resourceSizes": [
            { "resourceType": "script", "budget": 50 },
            { "resourceType": "stylesheet", "budget": 50 }
          ]
        }
      ]
    },
    "assert": {
      "$comment": "Desktop CI must continue to score 0.90+ performance, 0.95+ accessibility/best-practices, and 0.90+ SEO while staying below the LCP/TBT/CLS limits defined below.",
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.9 }],
        "categories:accessibility": ["error", { "minScore": 0.95 }],
        "categories:best-practices": ["error", { "minScore": 0.95 }],
        "categories:seo": ["error", { "minScore": 0.9 }],
        "largest-contentful-paint": ["error", { "maxNumericValue": 2500 }],
        "cumulative-layout-shift": ["error", { "maxNumericValue": 0.1 }],
        "total-blocking-time": ["error", { "maxNumericValue": 150 }]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "./artifacts/lighthouse"
    }
  },
  "profiles": {
    "mobile": {
      "$comment": "Mobile audits simulate 4G connectivity; releases must maintain ≥0.85 performance, ≤3200 ms LCP, ≤0.1 CLS, and ≤200 ms TBT for every covered route.",
      "collect": {
        "numberOfRuns": 1,
        "settings": {
          "formFactor": "mobile",
          "throttlingMethod": "simulate",
          "throttling": {
            "rttMs": 150,
            "throughputKbps": 1600,
            "cpuSlowdownMultiplier": 4,
            "downloadThroughputKbps": 1638.4,
            "uploadThroughputKbps": 750
          },
          "screenEmulation": {
            "mobile": true,
            "width": 360,
            "height": 640,
            "deviceScaleFactor": 3,
            "disabled": false
          },
          "chromeFlags": "--headless=new --no-sandbox --disable-gpu --disable-dev-shm-usage --user-data-dir=/tmp/lhci-chrome"
        }
      },
      "assert": {
        "assertions": {
          "categories:performance": ["error", { "minScore": 0.85 }],
          "categories:accessibility": ["error", { "minScore": 0.9 }],
          "categories:best-practices": ["error", { "minScore": 0.95 }],
          "categories:seo": ["error", { "minScore": 0.9 }],
          "largest-contentful-paint": ["error", { "maxNumericValue": 3200 }],
          "cumulative-layout-shift": ["error", { "maxNumericValue": 0.1 }],
          "total-blocking-time": ["error", { "maxNumericValue": 200 }]
        }
      }
    }
  }
}
