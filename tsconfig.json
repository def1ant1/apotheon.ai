{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@content/*": ["src/content/*"]
    },
    "types": ["astro/client", "@types/node", "@playwright/test"]
  },
  "include": [
    "src",
    "workers",
    "tests",
    ".ladle",
    "astro.config.mjs",
    "tailwind.config.mjs",
    "postcss.config.cjs",
    "playwright.config.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
