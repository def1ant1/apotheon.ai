{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@content/*": ["src/content/*"],
      "@i18n/*": ["src/i18n/*"],
      "satori": ["src/types/stubs/satori"],
      "@resvg/resvg-js": ["src/types/stubs/resvg"]
    },
    "types": [
      "astro/client",
      "@types/node",
      "@playwright/test",
      "vitest",
      "@testing-library/jest-dom",
      "@testing-library/jest-dom/vitest",
      "src/types/og-worker",
      "src/types/stubs/astro-i18next"
    ]
  },
  "include": [
    "src",
    "workers",
    "scripts",
    "tests",
    ".ladle",
    "astro.config.mjs",
    "tailwind.config.mjs",
    "postcss.config.cjs",
    "playwright.config.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
