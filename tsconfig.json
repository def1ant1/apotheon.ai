{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@content/*": ["src/content/*"]
    }
  },
  "include": ["src", "workers", "astro.config.mjs", "tailwind.config.mjs", "postcss.config.cjs"],
  "exclude": ["dist", "node_modules"]
}
