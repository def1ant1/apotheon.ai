{
  "name": "apotheon-astro",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "dev:https": "node ./scripts/dev-https.mjs",
    "predev": "npm run ensure:homepage-hero-media && npm run ensure:whitepapers",
    "build": "npm run build:static && npm run postbuild:seo && npm run search:index && npm run seo:verify",
    "build:static": "astro build",
    "prebuild": "npm run ensure:homepage-hero-media && npm run ensure:whitepapers && npm run diagrams:build && npm run brand:favicons",
    "prebuild:static": "npm run ensure:homepage-hero-media && npm run ensure:whitepapers && npm run diagrams:build",
    "preview": "astro preview --host",
    "typecheck": "astro check",
    "check": "npm run typecheck",
    "icons:lint": "node ./scripts/brand/build-icons.mjs --check --react",
    "icons:build": "node ./scripts/brand/build-icons.mjs --react",
    "diagrams:lint": "node ./scripts/brand/build-solution-diagrams.mjs --check",
    "diagrams:build": "node ./scripts/brand/build-solution-diagrams.mjs",
    "lint": "npm run diagrams:lint && npm run icons:lint && npm run lint:eslint && npm run lint:styles",
    "lint:eslint": "cross-env ESLINT_USE_FLAT_CONFIG=0 eslint --config .eslintrc.cjs . --max-warnings=0 --report-unused-disable-directives --ext .js,.jsx,.ts,.tsx,.astro,.mdx --ignore-pattern '!.ladle/**/*'",
    "lint:styles": "stylelint \"src/**/*.{css,pcss,scss,sass,astro}\" \"docs/**/*.{css,pcss,scss,sass,astro}\" \"public/**/*.{css,pcss,scss,sass}\" --allow-empty-input",
    "format": "prettier --write \"**/*.{astro,css,html,js,json,md,mdx,ts,tsx,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{astro,css,html,js,json,md,mdx,ts,tsx,yaml,yml}\"",
    "ladle": "ladle serve --config ladle.config.mjs",
    "ladle:build": "node ./scripts/ci/ensure-ladle-output.mjs && ladle build --config ladle.config.mjs --outDir dist/ladle",
    "ladle:ci": "npm run ladle:build && node ./scripts/ci/ladle-ci.mjs",
    "test": "npm run lint && npm run typecheck && npm run test:unit && npm run ladle:ci",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "pretest:e2e": "npm run ensure:homepage-hero-media",
    "prepare": "husky install",
    "pagefind:index": "npm run search:index",
    "postbuild:seo": "node ./scripts/seo/generate-sitemap.mjs && node ./scripts/seo/generate-robots.mjs",
    "search:index": "node ./scripts/search/postbuild.mjs",
    "seo:verify": "node ./scripts/seo/verify-dist.mjs",
    "lighthouse:ci": "node ./scripts/ci/lighthouse-ci.mjs",
    "zap:baseline": "node ./scripts/ci/zap-baseline.mjs",
    "gitleaks:ci": "node ./scripts/ci/gitleaks-ci.mjs",
    "brand:contrast": "node ./scripts/brand/contrast-audit.mjs",
    "brand:favicons": "node ./scripts/brand/generate-favicons.mjs",
    "ensure:homepage-hero-media": "node ./scripts/content/ensure-homepage-hero-media.mjs",
    "ensure:whitepapers": "node ./scripts/content/ensure-whitepapers.mjs",
    "workers:deploy": "node ./scripts/ci/deploy-workers.mjs",
    "workers:preview": "wrangler dev --config wrangler.toml"
  },
  "dependencies": {
    "@astrojs/image": "^0.10.0",
    "@astrojs/mdx": "^3.1.3",
    "@astrojs/react": "^3.6.0",
    "@astrojs/tailwind": "^5.1.0",
    "@fontsource-variable/inter": "^5.2.8",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-visually-hidden": "^1.2.3",
    "pagefind": "^1.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.33.4",
    "web-streams-polyfill": "^4.2.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.7.0",
    "@astrojs/sitemap": "^3.6.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@ladle/react": "^5.0.3",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.55.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^21.1.7",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "astro": "^4.15.6",
    "autoprefixer": "^10.4.20",
    "axe-core": "^4.10.3",
    "cross-env": "^10.0.0",
    "eslint": "^8.57.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-mdx": "^3.6.2",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-mdx": "^3.6.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jsdom": "^24.1.3",
    "lint-staged": "^16.1.6",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.4.47",
    "postcss-html": "^1.8.0",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "puppeteer": "^24.22.0",
    "stylelint": "^16.24.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "stylelint-order": "^7.0.0",
    "svgo": "^4.0.0",
    "tailwindcss": "^3.4.12",
    "typescript": "^5.6.2",
    "vitest": "^2.1.3",
    "yaml": "^2.8.1",
    "zod": "^3.25.76",
    "@cloudflare/workers-types": "^4.20241004.0",
    "wrangler": "^3.77.0"
  }
}
